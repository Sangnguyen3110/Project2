@model IEnumerable<DevXuongMoc.Models.Partner>

@{
    ViewData["Title"] = "Danh sách Đối tác";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-primary">Danh sách Đối tác</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Tiêu đề</th>
            <th>Logo</th>
            <th>Đường dẫn</th>
            <th>Thứ tự</th>
            <th>Ngày tạo</th>
            <th>Ngày cập nhật</th>
            <th>Người tạo</th>
            <th>Người cập nhật</th>
            <th>Nội dung</th>
            <th>Trạng thái</th>
            <th>Đã xóa</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>
                    <img src="@item.Logo" alt="Logo đối tác" class="img-thumbnail" width="150">
                </td>
                <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                <td>@Html.DisplayFor(modelItem => item.Orders)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.AdminCreated)</td>
                <td>@Html.DisplayFor(modelItem => item.AdminUpdated)</td>
                <td>@Html.DisplayFor(modelItem => item.Content)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Isdelete)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
